<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="position"
            type="int" />

        <variable
            name="postId"
            type="String" />

        <variable
            name="user"
            type="com.likeminds.feed.android.core.universalfeed.model.LMFeedUserViewData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lm_feed_white"
        android:paddingHorizontal="16dp">

        <com.likeminds.feed.android.core.ui.widgets.postheaderview.view.LMFeedPostHeaderView
            android:id="@+id/post_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.likeminds.feed.android.ui.base.views.LMFeedTextView
            android:id="@+id/tv_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="1sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/post_header"
            tools:fontFamily="@font/lm_feed_ui_roboto"
            tools:textColor="@color/lm_feed_grey"
            tools:textSize="16sp" />

        <!--TODO: add custom recycler view here-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_documents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_post_content"
            tools:itemCount="3"
            tools:listitem="@layout/lm_feed_post_documents_media_view"
            tools:visibility="visible" />

        <com.likeminds.feed.android.ui.base.views.LMFeedTextView
            android:id="@+id/tv_show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_documents"
            tools:fontFamily="@font/lm_feed_core_roboto"
            tools:text="+1 more"
            tools:textColor="@color/lm_feed_majorelle_blue"
            tools:textSize="16sp"
            tools:textStyle="normal"
            tools:visibility="visible" />

        <com.likeminds.feed.android.core.ui.widgets.postfooterview.view.LMFeedPostFooterView
            android:id="@+id/post_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_post_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>